#Exercício 2
'''
from statistics import mean

l_par=[]
print("Digite '0' para sair")
x=float(input("Digite o número: "))
while x!=0:
    if x%2==0:
        l_par.append(x)
    x=float(input("Digite o número: "))
if len(l_par) !=0:
    print(f"A média é: {mean(l_par)}\nOs valores pares são:{l_par}")
else:
    print("Não foi digitado número par")
'''
