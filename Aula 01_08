#Exercício 4
'''
from statistics import mean
l_altura=[]
l_genero=[]
print("Digite '0' para sair")
altura=float(input("Digite a altura da 1º pessoa: "))
while altura!=0:
    l_altura.append(altura)
    genero=input("Digite o gênero da pessoa. 'm' para masculino e 'f' para feminino: ")
    l_genero.append(genero)
    altura=float(input(f"Digite a altura da {len(l_genero)+1}º pessoa: "))

print(f"Maior altura: {max(l_altura)}   Menor altura: {min(l_altura)}\nQtd masculino: {l_genero.count('m')}   Qtd feminino: {l_genero.count('f')}")
print(f"A média de altura foi: {mean(l_altura)}\nA porcentagem de homens é: {l_genero.count('m')/len(l_genero)*100}%")
'''
