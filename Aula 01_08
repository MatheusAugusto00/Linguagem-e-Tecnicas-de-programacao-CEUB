#Exercício 1
'''
from statistics import mean

l_notas=[]
print("Digite '-1' para o resultado")
x=float(input("Digite a nota do 1º aluno: "))
while x!=-1:
    l_notas.append(x)
    x=float(input(f"Digite a nota do {len(l_notas)+1}º aluno: "))
print(f"A média da turma é: {mean(l_notas)}\nA quantidade de alunos é: {len(l_notas)}")
